<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="../assets/css/bootstrap.css">
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous">
        <title>Blog-Page</title>
    </head>
    <body>
        <!-- Start Navbar -->
        <nav class="navbar navbar-expand-lg bg-body-secondary">
            <div class="container-fluid">
                <a class="navbar-brand me-3" href="/">
                    <img src="../assets/image/daun.png" alt="logo">
                </a>
                <button
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item me-2">
                            <a class="nav-link" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link active text-danger fw-bold" href="/blog-page">Blogs</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link" href="/testimonial">Testimonials</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a class="btn btn-danger" href="/contact-me">Contact Me</a>
                    </div>
                </div>
            </div>
        </nav>
        <!-- End Navbar -->

        {{!-- Start Post Blog --}}
        <div class="bg-white">

            <div class="d-flex justify-content-center mt-4">
                <button type="button" class="btn btn-dark">
                    <a href="/blog" class="text-white text-decoration-none">Add Project</a>
                </button>
            </div>

            <div class="containercrd" id="contents">
                {{#each obj }}
                    <div class="project-card">
                        <img src=./assets/image/{{ this.image }} alt="Project Image">
                        <div class="project-details">
                            <h2>
                                <a
                                    href="/blog-detail/{{ this.id }}"
                                    target="_blank"
                                    class="text-black text-decoration-none">{{ this.project_name }}</a>
                            </h2>
                            <p>
                                {{ this.created_at }} | {{ this.author }}
                            </p>
                            <p>
                                {{ this.start_date }} | {{ this.end_date }}
                            </p>
                            <p></p>
                            <p>
                                {{ this.technologies }}
                            </p>
                            <p>
                                {{ this.description }}
                            </p>
                            <div class="action-buttons">
                                <a href="/update-blog/{{ this.id }}" class="text-white text-decoration-none"><button class="edit-btn">Edit Post</button></a>
                                <form method="post" action="/delete-blog/{{ this.id }}">
                                    <button class="delete-btn">Delete Post</button>
                                </form>
                            </div>
                        </div>

                    </div>
                {{/each}}
            </div>
        </div>
        <!-- End Form -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    </body>
</html>