<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="../assets/css/bootstrap.css">
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous">
        <title>Contact Me</title>
    </head>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg bg-body-secondary">
        <div class="container-fluid">
            <a class="navbar-brand me-3" href="/index">
                <img src="../assets/image/daun.png" alt="logo">
            </a>
            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item me-2">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item me-2">
                        <a class="nav-link" href="/blog-page">Blogs</a>
                    </li>
                    <li class="nav-item me-2">
                        <a class="nav-link" href="/testimonial">Testimonials</a>
                    </li>
                </ul>
                {{#if isLogin}}
                    <div class="d-flex align-items-center me-3">
                    <div class="dropdown">
                        <button class="btn btn-outline-dark  dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            Welcome, {{user.name}}
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="/logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
                {{else}}
                    <ul class="navbar-nav">
                        <li class="nav-item me-2">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link" href="/register">Register</a>
                        </li>
                    </ul>
                {{/if}}
                <div class="d-flex">
                    <a class="btn btn-danger" href="/contact-me">Contact Me</a>
                </div>
            </div>
        </div>
    </nav>
    <!-- END NAVBAR -->

    <!-- CONTACT -->
    <body>
        <div class="container mt-5">
            <h2 class="text-center">Get In Touch</h2>

            <form class="w-50 mx-auto" method="post" action="/contact-me">
                <div class="mb-3">
                    <label for="nama" class="form-label">Name:</label>
                    <input type="text" class="form-control" id="nama" name="nama">
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        aria-describedby="emailHelp">
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>

                <div class="mb-3">
                    <label for="phone" class="form-label">No Handphone:</label>
                    <input type="text" class="form-control" id="phone" name="phone">
                </div>

                <div class="form-group">
                    <label for="pilih">Role:</label>
                    <select class="form-control" id="pilih" name="role">
                        <option></option>
                        <option value="Frontend Developer">Frontend Developer</option>
                        <option value="Backend Developer">Backend Developer</option>
                        <option value="Fullstack Developer">Fullstack Developer</option>
                    </select>
                </div>

                <div class="mb-3 mt-3">
                    <label for="pesan" class="form-label">Message</label>
                    <textarea
                        class="form-control"
                        placeholder="Leave a comment here"
                        id="pesan"
                        name="pesan"
                        style="height: 100px; resize: none"></textarea>
                </div>

                <div class="d-flex justify-content-end">
                    <br>
                    <button type="submit" class="btn btn-success mt-3" onclick="getData()">SEND</button>
                </div>
            </form>
            <!-- END FORM -->

            <script src="../assets/js/contact.js"></script>
            <script
                src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
                crossorigin="anonymous"></script>
        </body>
    </html>