<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="../assets/css/blog-detail.css">
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous">
        <title>Blog-Detail Page</title>
    </head>
    <body>
        <!-- Start Navbar -->
        <nav class="navbar navbar-expand-lg bg-body-secondary">
            <div class="container-fluid">
                <a class="navbar-brand me-3" href="/index">
                    <img src="../assets/image/daun.png" alt="logo">
                </a>
                <button
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item me-2">
                            <a class="nav-link active" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link text-danger fw-bold" href="/blog-page">Blogs</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link" href="/testimonials">Testimonials</a>
                        </li>
                    </ul>
                    {{#if isLogin}}
                        <div class="d-flex align-items-center me-3">
                            <div class="dropdown">
                                <button
                                    class="btn btn-outline-dark  dropdown-toggle"
                                    type="button"
                                    id="userDropdown"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    Welcome,
                                    {{user.name}}
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" href="/logout">Logout</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    {{else}}
                        <ul class="navbar-nav">
                            <li class="nav-item me-2">
                                <a class="nav-link" href="/login">Login</a>
                            </li>
                            <li class="nav-item me-2">
                                <a class="nav-link" href="/register">Register</a>
                            </li>
                        </ul>
                    {{/if}}
                    <div class="d-flex">
                        <a class="btn btn-danger" href="/contact-me">Contact Me</a>
                    </div>
                </div>
            </div>
        </nav>
        <!-- End Navbar -->

        <div class="container">
            <div class="project-details">
                <img
                    src="../assets/image/{{ data.image }}"
                    alt="Project Image"
                    class="img-details">
                <div class="project-info">
                    <h2>{{ data.project_name }}
                        |
                        {{ data.id }}</h2>
                    <p>{{ data.start_date }}
                        -
                        {{ data.end_date }}</p>
                    <p>{{ data.technologies }}</p>
                    <p>{{ data.description }}</p>
                    <a href="#" class="edit-btn">Edit</a>
                    <a href="#" class="delete-btn">Delete</a>
                </div>
            </div>
        </div>
        <!-- End Form -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    </body>
</html>