<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous">
        <link rel="stylesheet" href="/css/main.css">
        <title>{{ title }}</title>
    </head>

    <body class="bgcolor">
        <!-- NAVBAR -->
        <nav class="navbar navbar-expand-lg bg-body-secondary">
            <div class="container-fluid">
                <a class="navbar-brand me-3" href="/index">
                    <img src="../assets/image/daun.png" alt="logo">
                </a>
                <button
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item me-2">
                            <a class="nav-link" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link" href="/blog-page">Blogs</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link" href="/testimonial">Testimonials</a>
                        </li>
                    </ul>
                    {{#if isLogin}}
                        <div class="d-flex align-items-center me-3">
                            <div class="dropdown">
                                <button
                                    class="btn btn-outline-dark  dropdown-toggle"
                                    type="button"
                                    id="userDropdown"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    Welcome,
                                    {{user.name}}
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" href="/logout">Logout</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    {{else}}
                        <ul class="navbar-nav">
                            <li class="nav-item me-2">
                                <a class="nav-link" href="/login">Login</a>
                            </li>
                            <li class="nav-item me-2">
                                <a class="nav-link active text-danger fw-bold" href="/register">Register</a>
                            </li>
                        </ul>
                    {{/if}}
                    <div class="d-flex">
                        <a class="btn btn-danger" href="/contact-me">Contact Me</a>
                    </div>
                </div>
            </div>
        </nav>
        <!-- END NAVBAR -->

        {{!-- FORM REGISTER --}}
        <div class="container d-flex justify-content-center mb-5 mt-5">
            <div class="w-50">
                <h2 class="d-flex justify-content-center">REGISTER</h2>
                <form method="post" action="/register">
                    <div class="mb-3">
                        <label for="username" class="form-label">Name</label>
                        <input
                            type="text"
                            class="form-control"
                            name="name"
                            id="username"
                            aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input
                            type="email"
                            class="form-control"
                            name="email"
                            id="email"
                            aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" class="form-control" id="password">
                    </div>
                    <button type="submit" class="btn btn-success mt-2 d-flex justify-content-end">Submit</button>
                </form>
            </div>
        </div>
        {{!-- end form --}}

        <!-- FOOTER -->
        <footer class="footer text-white text-center pb-5 pt-5">
            <p>Created with Love By
                <a href="https://www.instagram.com/" class="text-white fw-bold">
                    Jodi Adrian
                </a>
            </p>
        </footer>
        <!-- END FOOTER -->

    </body>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</html>