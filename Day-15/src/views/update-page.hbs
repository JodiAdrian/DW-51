<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="../assets/css/bootstrap.css">
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous">
        <title>Update Blogs</title>
    </head>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg bg-body-secondary">
        <div class="container-fluid">
            <a class="navbar-brand me-3" href="/">
                <img src="../assets/image/daun.png" alt="logo">
            </a>
            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item me-2">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item me-2">
                        <a class="nav-link active text-danger fw-bold" href="/blog-page">Blogs</a>
                    </li>
                    <li class="nav-item me-2">
                        <a class="nav-link" href="/testimonial">Testimonials</a>
                    </li>
                </ul>
                 {{#if isLogin}}
                    <div class="d-flex align-items-center me-3">
                    <div class="dropdown">
                        <button class="btn btn-outline-dark  dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            Welcome, {{user.name}}
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="/logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
                {{else}}
                    <ul class="navbar-nav">
                        <li class="nav-item me-2">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link" href="/register">Register</a>
                        </li>
                    </ul>
                {{/if}}
                <div class="d-flex">
                    <a class="btn btn-danger" href="/contact-me">Contact Me</a>
                </div>
            </div>
        </div>
    </nav>
    <!-- END NAVBAR -->

    <!-- FORM BLOGS -->
    <body>
        <div class="container mt-5">
            <h2 class="text-center">Update Blogs</h2>

            <form
                class="w-75 mx-auto"
                method="post"
                action="/update-blog"
                autocomplete="off">
                <input type="hidden" name="id" value={{ filter.id }} >
                <div class="mb-3">
                    <label for="project_name" class="form-label">Project Name:</label>
                    <input
                        type="text"
                        class="form-control"
                        id="project_name"
                        name="project_name"
                        value={{ filter.project_name }}>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="start_date">Start Date:</label>
                        <input
                            type="date"
                            class="form-control"
                            id="start_date"
                            name="start_date"
                            value={{ filter.start_date }}>
                    </div>

                    <div class="col-md-6">
                        <label for="end_date">End Date:</label>
                        <input
                            type="date"
                            class="form-control"
                            id="end_date"
                            name="end_date"
                            value={{ filter.end_date }}>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea
                        class="form-control"
                        placeholder="Leave a comment here"
                        id="description"
                        name="description"
                        style="height: 100px; resize: none">{{ filter.description }}</textarea>
                </div>

                <div class="container mt-3 mb-3">
                    <label for="Technologies" class="form-label">Technologies</label>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-check">
                                    <input
                                        class="form-check-input"
                                        type="checkbox"
                                        id="nodejs"
                                        name="technologies"
                                        value="true">
                                    <label class="form-check-label" for="nodejs">NodeJs</label>
                                </div>
                                <div class="form-check">
                                    <input
                                        class="form-check-input"
                                        type="checkbox"
                                        id="nextjs"
                                        name="technologies"
                                        value="true">
                                    <label class="form-check-label" for="nextjs">Next Js</label>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-check">
                                    <input
                                        class="form-check-input"
                                        type="checkbox"
                                        id="reactjs"
                                        name="technologies"
                                        value="true">
                                    <label class="form-check-label" for="reactjs">React Js</label>
                                </div>
                                <div class="form-check">
                                    <input
                                        class="form-check-input"
                                        type="checkbox"
                                        id="typescript"
                                        name="technologies"
                                        value="true">
                                    <label class="form-check-label" for="typescript">Typescript</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <input type="file" class="form-control" id="input-blog-image">
                    <label class="input-group-text" for="input-blog-image">Upload</label>
                </div>

                <div class="d-flex justify-content-end mt-5">
                    <button type="submit" class="btn btn-warning px-5 py-2">Post Update</button>
                </div>
            </form>
        </div>
        <!-- END FORM -->

        <script>
            document
                .getElementById("nodejs")
                .checked = {{filter.nodejs}};
            document
                .getElementById("reactjs")
                .checked = {{filter.reactjs}};
            document
                .getElementById("nextjs")
                .checked = {{filter.nextjs}};
            document
                .getElementById("typescript")
                .checked = {{filter.typescript}};
        </script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    </body>
</html>